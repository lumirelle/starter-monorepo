{
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "bun simple-git-hooks",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "start": "bun run --cwd packages/pkg-placeholder start",
    "docs": "bun run --cwd docs docs:dev",
    "docs:build": "bun run --cwd docs docs:build",
    "docs:preview": "bun run --cwd docs docs:preview",
    "play": "bun run --cwd playground play",
    "lint": "bun eslint --cache .",
    "typecheck": "bun tsc --noEmit",
    "usagecheck": "bun knip",
    "distcheck": "bun run --filter 'pkg-placeholder' distcheck",
    "check": "bun run lint && bun run typecheck && bun run usagecheck && bun run distcheck",
    "test": "bun test",
    "prerelease": "bun run build && bun run check && bun run test",
    "release": "bun bumpp --all --recursive --execute \"bun update --lockfile-only pkg-placeholder\" # See https://github.com/oven-sh/bun/issues/18906 and https://github.com/oven-sh/bun/issues/20477"
  },
  "workspaces": {
    "packages": [
      "docs",
      "playground",
      "packages/*",
      "examples/*"
    ],
    "catalogs": {
      "prod": {
        "@antfu/utils": "^9.3.0"
      },
      "dev": {
        "bumpp": "^10.4.0",
        "simple-git-hooks": "git+https://github.com/toplenboren/simple-git-hooks.git#7625657",
        "typescript": "^5.9.3"
      },
      "types": {
        "@types/bun": "^1.3.6"
      },
      "build": {
        "bunup": "^0.16.20"
      },
      "check": {
        "@antfu/eslint-config": "^7.2.0",
        "@arethetypeswrong/cli": "^0.18.2",
        "eslint": "^9.39.2",
        "eslint-plugin-format": "^1.3.1",
        "knip": "^5.82.1",
        "lint-staged": "^16.2.7",
        "publint": "^0.3.17"
      },
      "test": {
        "vitest-package-exports": "^1.1.2"
      },
      "docs": {
        "@iconify-json/svg-spinners": "^1.2.4",
        "@shikijs/vitepress-twoslash": "^3.21.0",
        "@unocss/reset": "^66.5.12",
        "@vueuse/core": "^14.1.0",
        "floating-vue": "^5.2.2",
        "pinia": "^3.0.4",
        "unocss": "^66.5.12",
        "unplugin-vue-components": "^31.0.0",
        "vite-tsconfig-paths": "^6.0.4",
        "vitepress": "^2.0.0-alpha.15",
        "vitepress-plugin-group-icons": "^1.7.1",
        "vue": "^3.5.27"
      }
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:check",
    "@arethetypeswrong/cli": "catalog:check",
    "@types/bun": "catalog:types",
    "bumpp": "catalog:dev",
    "bunup": "catalog:build",
    "eslint": "catalog:check",
    "eslint-plugin-format": "catalog:check",
    "knip": "catalog:check",
    "lint-staged": "catalog:check",
    "pkg-placeholder": "workspace:*",
    "publint": "catalog:check",
    "simple-git-hooks": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest-package-exports": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "*": "bun eslint --cache --fix"
  }
}
